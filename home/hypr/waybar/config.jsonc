    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}%{icon}",
        "format-full": "{capacity}%{icon}",
        "format-charging": "{capacity}%Û∞ö•",
        "format-plugged": "{capacity}%Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´",
        "format-ethernet": "Û∞àÄ",
        "tooltip-format": "{ifname} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Ó´ê",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },

    "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö©  {icon}Ôäî {format_source}",
        "format-muted": "Ôö©  {format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            // "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
            "default": ["ÔÄ¶ ‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë", "ÔÄß ‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë", "ÔÄß ‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë","ÔÄß ‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë","ÔÄß ‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë","ÔÄß ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë","ÔÄß ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë","ÔÄß ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë","ÔÄß ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë","ÔÄß ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë","ÔÄß ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà"]
        },
        "on-click": "pwvucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format" : "‚èª ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		}
    },

    "custom/updates": {
        "format": "{} {icon}",
        "return-type": "json",
        "format-icons": {
            "has-updates": "Û±ç∑",
            "updated": "Û∞Ç™"
        },
        "exec-if": "which waybar-module-pacman-updates",
        "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
    },

    // Group configuration
    "group/power": {
      "orientation": "horizontal",
      "modules": [
        "battery"
        // "power-profiles-daemon"
      ]
    },
    "group/networking": {
      "orientation": "horizontal",
      "modules": [
        "custom/tailscale",
        "network"
      ]
    },

    "custom/tailscale" : {
      "exec": "~/.nixConfig/home/hypr/waybar/scripts/waybar-tailscale/waybar-tailscale.sh --status",
      "on-click": "exec ~/.nixConfig/home/hypr/waybar/scripts/waybar-tailscale/waybar-tailscale.sh --toggle",
      "exec-on-event": true,
      "format": "{icon}",
      "format-icons": {
          "connected": "Óô≤",
          "stopped": "ÔÇú"
      },
      "tooltip": true,
      "return-type": "json",
      "interval": 3
      },

    "custom/volume": {
        "name": "volume",
        "exec": "~/.config/waybar/scripts/ascii-volume/ascii-volume.sh",
        "on-click": "pwvucontrol",
        "exec-on-event": true,
        "interval": 1,
        "format": "{}",
        "format-prefix": "",
        "format-suffic": "",
    }
}

